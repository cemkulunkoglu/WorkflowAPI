{
  "Routes": [
    {
      // 🔐 AUTH SERVICE YÖNLENDİRMESİ
      // Frontend'den gelen: localhost:9000/auth/...
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET", "PUT", "DELETE" ],

      // Arkadaki servise giden: localhost:7130/api/Auth/...
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7130
        }
      ],
      "DownstreamPathTemplate": "/api/Auth/{everything}"
    },
    {
      // ⚙️ WORKFLOW SERVICE YÖNLENDİRMESİ
      // Frontend'den gelen: localhost:9000/workflow/...
      "UpstreamPathTemplate": "/workflow/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET", "PUT", "DELETE" ],

      // Arkadaki servise giden: localhost:7071/api/WorkflowEngine/...
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7071
        }
      ],
      "DownstreamPathTemplate": "/api/WorkflowEngine/{everything}"
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:9000" // Gateway'in kendi adresi
  }
}